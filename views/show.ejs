<% include ./partials/header %>

<div class="ui main text container segment">
  <div class="ui huge header"><%= blog.title %></div>
  <div class="ui top attached">
    <div class="item">
      <img class="ui centered rounded image" src="<%=blog.image%>" alt="">
    </div>
    <div class="content">
      <span><%=blog.created.toDateString()%></span>
    </div>
    <div class="description">
      <p><%- blog.body %></p>
      <a class="ui green inverted button" id="delete" href="/blogs/<%= blog._id %>/edit">Edit</a>
      <form class="" action="/blogs/<%= blog._id %>?_method=DELETE" method="post">
        <button class="ui red inverted button">DELETE</button>
      </form>
    </div>
  </div>
</div>

<% include ./partials/footer %>
